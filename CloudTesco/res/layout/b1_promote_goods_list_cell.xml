<?xml version="1.0" encoding="utf-8"?>
<com.insthub.ecmobile.component.PromoteGoodsListCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/b1_promote_goods_list_item_height"
    android:background="@drawable/border_four_gray_line"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/b1_promote_goods_list_img"
 		    android:layout_width="@dimen/b1_promote_goods_list_item_img_width"
	        android:layout_height="@dimen/b1_promote_goods_list_item_img_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/b1_promote_goods_list_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/b1_promote_goods_list_img"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="#383838"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b1_promote_goods_list_name"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/b1_promote_goods_list_img">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/b1_promote_goods_list_spare"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/cire_zhe_money"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:id="@+id/b1_promote_goods_list_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="5dp"
                    android:textColor="#383838"
                    android:textSize="16dp" />
            </LinearLayout>

            <Button
                android:id="@+id/b1_promote_goods_list_purchase"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_gobuying"
                android:text="去抢购"
                android:textColor="#fff"
                android:textSize="17sp" />
        </RelativeLayout>
    </RelativeLayout>

</com.insthub.ecmobile.component.PromoteGoodsListCell>