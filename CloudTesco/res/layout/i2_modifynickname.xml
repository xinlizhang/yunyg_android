<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/body"
    android:orientation="vertical" >

   <include layout="@layout/title_view" /> 
	
   <RelativeLayout 
       android:layout_width="fill_parent"
       android:layout_height="60dp"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:gravity="center_vertical"
       android:background="@drawable/border_four_gray_line">
       <EditText 
           android:id="@+id/enter_nickname"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="@string/please_enter_nickname"
           android:layout_alignParentLeft="true"
           android:layout_marginRight="50dp"
           android:maxLength="15" 
           android:textSize="16dp"
           android:textColor="#000"
           android:background="@null"/>
       <Button 
           android:id="@+id/delete"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:text="x"
           android:textSize="15dp"
           android:textColor="#fff"
           android:gravity="center"
           android:layout_marginRight="15dp"
           android:layout_alignParentRight="true"
           android:background="@drawable/tuitional_carousel_active_btn"/>
   </RelativeLayout>
   
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="15dp"
       android:text="4-20个字符，可由中英文，数字，“_”，“-”组成"
       android:textColor="#888a8c"
       android:textSize="14dp"/>
   
</LinearLayout>







