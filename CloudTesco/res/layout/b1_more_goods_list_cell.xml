<?xml version="1.0" encoding="utf-8"?>
<com.insthub.ecmobile.component.MoreGoodsListCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/b1_promote_goods_list_item_height"
    android:orientation="vertical" 
    android:background="@drawable/border_four_gray_line" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        
	    <ImageView 
	        android:id="@+id/b1_more_goods_list_img"
	        android:layout_width="@dimen/b1_promote_goods_list_item_img_width"
    		android:layout_height="@dimen/b1_promote_goods_list_item_img_height"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"/>
		<TextView 
		    android:id="@+id/b1_more_goods_list_name"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@+id/b1_more_goods_list_img"
		    android:textSize="16sp"
		    android:textColor="#383838"
		    android:layout_marginLeft="10dp"
		    android:layout_marginTop="5dp"
		    android:ellipsize="end"
			android:lines="2"/> 
		    
		<RelativeLayout
		    android:layout_marginTop="15dp" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@+id/b1_more_goods_list_img"
		    android:layout_below="@+id/b1_more_goods_list_name">
		    
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_marginLeft="10dp"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentBottom="true">
		        
		     <TextView 
		        android:id="@+id/b1_more_goods_list_price"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="16dp"
			    android:layout_marginTop="5dp"
			    android:textColor="#f24848"
			    android:layout_gravity="bottom"/> 			   
		        
			<TextView
			    android:id="@+id/b1_more_goods_list_prase" 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="14dp"
			    android:layout_marginTop="5dp"
			    android:textColor="#9c9c9c"
			    android:text="好评93% 668人"
			    android:layout_gravity="bottom"/> 		        
		    </LinearLayout>		    
		    
		</RelativeLayout>
	    
    </RelativeLayout>
    

</com.insthub.ecmobile.component.MoreGoodsListCell>
