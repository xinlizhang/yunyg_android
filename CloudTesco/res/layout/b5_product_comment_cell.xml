<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="15dp"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/comment_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/comment_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c4c4c4"
                android:textSize="16dp" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <View 
                android:id="@+id/stars1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/discuss_start_showed"/>
            <View 
                android:id="@+id/stars2"
                android:layout_marginLeft="2dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/discuss_start_showed"/>
            <View 
                android:id="@+id/stars3"
                android:layout_marginLeft="2dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/discuss_start_showed"/>
            <View 
                android:id="@+id/stars4"
                android:layout_marginLeft="2dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/discuss_start_showed"/>
             <View 
                android:id="@+id/stars5"
                android:layout_marginLeft="2dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/discuss_start_showed"/>
        </LinearLayout>

        <TextView
            android:id="@+id/comment_item_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textColor="#666666"
            android:textSize="17dp" />
        
        <TextView
			android:id="@+id/comment_item_reply"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
			android:visibility="gone"            
            android:padding="10dp"
            android:background="#efefef"/>

</LinearLayout>