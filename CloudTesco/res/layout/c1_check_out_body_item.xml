<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index_body_bg"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/goods_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/default_image"/>
        
         <ImageView
            android:id="@+id/enter"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/accsessory_arrow_right" />
         
         <TextView
            android:id="@+id/body_goods_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/enter"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="ï¿¥ 13.32"
            android:textColor="#ff0000"
            android:textSize="16dp" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/body_goods_total"
            android:layout_toRightOf="@+id/goods_img"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/body_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
				android:ellipsize="end"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/body_goods_num"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:singleLine="true"
                android:text="X 1"
                android:textColor="#000000"
                android:textSize="16dp" />
        </LinearLayout>
    </RelativeLayout>
    
    
</LinearLayout>