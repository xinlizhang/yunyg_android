<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/body"
    android:orientation="vertical" >

    <!-- <include layout="@layout/top_view" /> -->
    <include layout="@layout/title_view" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/my_app_name"
		    android:textSize="40dp"
		    android:textColor="#fb3300"
		    android:layout_marginTop="25dp"/> 
		    
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="15dp"
		    android:textColor="#898c8f"
		    android:textSize="15dp"
		    android:text="欢迎使用雲易购"/>
		
		<ImageView 
		    android:layout_width="100dp"
		    android:layout_height="100dp"
		    android:layout_marginTop="15dp"
		    android:background="@drawable/about_we_erweima"/>
		
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="20dp"
		    android:orientation="vertical"
		    android:background="@drawable/border_four_gray_line">
		    
		    <RelativeLayout 
		        android:id="@+id/statement_layout"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:paddingLeft="15dp"
		        android:paddingRight="15dp">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:text="@string/statement"
		            android:textSize="16dp"
		            android:textColor="#000"/>
		        
		        <ImageView
            		android:layout_width="12dp"
            		android:layout_height="12dp"
            		android:layout_alignParentRight="true"
            		android:layout_centerVertical="true"
            		android:src="@drawable/accsessory_arrow_right" />
		    </RelativeLayout>
		    <View 
		        android:layout_width="fill_parent"
		        android:layout_height="1px"
		        android:background="#e0e0e0"/>
		   <RelativeLayout 
		       	android:id="@+id/use_help_layout"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:paddingLeft="15dp"
		        android:paddingRight="15dp">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:text="@string/use_help"
		            android:textSize="16dp"
		            android:textColor="#000"/>
		        
		        <ImageView
            		android:layout_width="12dp"
            		android:layout_height="12dp"
            		android:layout_alignParentRight="true"
            		android:layout_centerVertical="true"
            		android:src="@drawable/accsessory_arrow_right" />
		    </RelativeLayout>
		    <View 
		        android:layout_width="fill_parent"
		        android:layout_height="1px"
		        android:visibility="gone"
		        android:background="#e0e0e0"/>
		 	<RelativeLayout 
		 	    android:id="@+id/cive_conment_layout"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:visibility="gone"
		        android:paddingLeft="15dp"
		        android:paddingRight="15dp">
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:text="@string/cive_conment"
		            android:textSize="16dp"
		            android:textColor="#000"/>
		        
		        <ImageView
            		android:layout_width="12dp"
            		android:layout_height="12dp"
            		android:layout_alignParentRight="true"
            		android:layout_centerVertical="true"
            		android:src="@drawable/accsessory_arrow_right" />
		    </RelativeLayout>
		</LinearLayout>
		    
		
    </LinearLayout>

      

</LinearLayout>